@model IEnumerable<FIT5032_Assignment.Models.Booking>

@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row content-padding">
    <div class="col-sm-6">

        <h2>Your Bookings</h2>
        <br />

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookingTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingTime)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BookingId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BookingId }) |
                        @Html.ActionLink("Cancel", "Delete", new { id = item.BookingId })
                    </td>
                </tr>
            }

        </table>
        <br />
        <br />
        <div class="btn-align-right">
            <br />
            @Html.ActionLink("Make a Booking", "Create", null, null, new { @class = "btn-style" })
        </div>
    </div>
    <div class="col-sm-6"></div>
</div>
