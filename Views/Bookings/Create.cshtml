@model FIT5032_Assignment.Models.Booking

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<SelectListItem> noGuestList = new List<SelectListItem>();
    noGuestList.Add(new SelectListItem { Text = "1", Value = "1", Selected = true });
    noGuestList.Add(new SelectListItem { Text = "2", Value = "2" });
    noGuestList.Add(new SelectListItem { Text = "3", Value = "3" });
    noGuestList.Add(new SelectListItem { Text = "4", Value = "4" });
    noGuestList.Add(new SelectListItem { Text = "5", Value = "5" });
    noGuestList.Add(new SelectListItem { Text = "6", Value = "6" });
    noGuestList.Add(new SelectListItem { Text = "7", Value = "7" });
    noGuestList.Add(new SelectListItem { Text = "8", Value = "8" });


    List<SelectListItem> timeList = new List<SelectListItem>();
    timeList.Add(new SelectListItem { Text = "5:00pm", Value = "5:00pm", Selected = true });
    timeList.Add(new SelectListItem { Text = "6:00pm", Value = "6:00pm" });
    timeList.Add(new SelectListItem { Text = "7:00pm", Value = "7:00pm" });
    timeList.Add(new SelectListItem { Text = "8:00pm", Value = "8:00pm" });
    timeList.Add(new SelectListItem { Text = "9:00pm", Value = "9:00pm" });
    timeList.Add(new SelectListItem { Text = "10:00pm", Value = "10:00pm" });
    timeList.Add(new SelectListItem { Text = "11:00pm", Value = "11:00pm" });
    timeList.Add(new SelectListItem { Text = "12:00pm", Value = "12:00pm" });
}

<div class="row content-padding">
    <div class="col-sm-6">
        <h2>Make a Booking</h2>
        <br />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.BookingGuestNum, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BookingGuestNum, noGuestList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookingGuestNum, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookingDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control datepicker", autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BookingTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.BookingTime, timeList, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BookingTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LocationId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("LocationId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="btn-align-right col-md-2">
                        @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn-style " })
                        <input type="submit" value="Book Now" class="btn-style" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-sm-6"></div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}