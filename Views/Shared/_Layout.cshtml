<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mario's Pizza - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @* This is for the mapbox map. *@
    <script src='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.css' rel='stylesheet' />
    @*This is used for the Geocoding Mapbox API*@
    @*<script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.2.0/mapbox-glgeocoder.min.js'></script>
        <link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-glgeocoder/v2.2.0/mapbox-gl-geocoder.css' type='text/css' />*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mario's Pizza", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Our Menu", "Menu", "Home")</li>

                    @if (User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("SuperUser") || HttpContext.Current.User.IsInRole("Customer"))
                    {
                        <!-- Customer and SuperUser options -->
                        <li>@Html.ActionLink("Book a table", "Index", "Bookings")</li>
                        <li>@Html.ActionLink("Rate our Pizza", "Index", "PizzaRatings")</li>
                        <li>@Html.ActionLink("Restaurant Finder", "Finder", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Careers", "Careers", "Home")</li>
                        <li class="now-hiring-li"><div class="now-hiring-div">Now Hiring!</div></li>
                    }

                    @if (User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("SuperUser") || HttpContext.Current.User.IsInRole("StaffMember"))
                    {
                        <!-- Staff Member and SuperUser options -->
                        <li>@Html.ActionLink("Events Calendar", "StaffCalendar", "Home")</li>
                    }

                    @if (User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("SuperUser") || HttpContext.Current.User.IsInRole("Administrator"))
                    {
                        <!-- Staff Administrator and SuperUser options -->
                        <li>@Html.ActionLink("Admin Options", "Admin", "Home")</li>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Restaurant Finder", "Finder", "Home")</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Careers", "Careers", "Home")</li>
                        <li class="now-hiring-li"><div class="now-hiring-div">Now Hiring!</div></li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- BODY -->
        @RenderBody()
        <!-- END BODY -->
    </div>
    <footer>
        @*<p>&copy; @DateTime.Now.Year - Created by Malcolm Malloy 22026320</p>*@
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/custom")
</body>
</html>
