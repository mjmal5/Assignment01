@model FIT5032_Assignment.Models.EmailModel

@{
    ViewBag.Title = "Careers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row content-padding">
    <div class="col-sm-6">

        <h2>Careers</h2>

        <p>Hey Everyone!</p>
        
        <p>We need more staff so if your interested, why don't you send us your CV</p>
        <br />
        @using (Html.BeginForm(
            null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()


            if (@ViewBag.Result != null)
            {
                <div class="alert alert-info">@ViewBag.Result</div>
            }

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            @Html.LabelFor(model => model.FromEmail, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.FromEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.Contents, new { @class = "form-control text-area-message" })
                @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Attachment, htmlAttributes: new { @class = "control-label" })
            <div>


                @*
                @Html.TextAreaFor(model => model.Attachment, new { @class = "form-control text-area-message" })
                *@
                @Html.TextBoxFor(model => model.Attachment, new { type = "file" })
                @Html.ValidationMessageFor(model => model.Attachment, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="btn-align-right">
            <input type="submit" value="Send" class="btn-style" />
        </div>

    </div>
        }
    </div>
    <div class="col-sm-6"></div>
</div>
